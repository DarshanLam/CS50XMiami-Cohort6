
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-2">
        </div>

        <div class="col-xs-12 col-sm-8 text-center">


            <div class="panel-body">
                <h2>Here is the list of people NOT Sleeping</h2>
                <table class="table table-sm table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </tr> 
                    </thead>
                    <tbody>
                        @foreach (Evite.Models.ResponseToEvite r in Model) {
                            <tr>
                                <td>@r.Name</td>
                                <td>@r.Email</td>
                                <td>@r.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-xs-12 col-sm-2 ">
        </div>
    </div>
</div>